doctype html
html

  head

  meta(charset="utf-8")

  meta(http-equiv="X-UA-Compatible", content="IE=edge")

  title Contact

  meta(name="description", content="Contact")

  meta(name="viewport", content="width=device-width, initial-scale=1, minimum-scale=1.0, maximum-scale=1.0, minimal-ui")

  link(rel="stylesheet", href="assets/styles/contact.css", type="text/css")
  link(rel="stylesheet", href="assets/fonts/stylesheet.css", type="text/css", charset="utf-8")
  link(rel="stylesheet", href="assets/fonts/stylesheet2.css", type="text/css", charset="utf-8")
  
  body

    div.wrapper
        
      div#topsection
  
        ul.nav
  
          li.home: a(href="/") Home
  
          li.portfolio: a(href="/portfolio") Portfolio
          
          li.about: a(href="/about") About
          
          li.abouttwo: a(href="/about") About
          
          li.contact: a(href="/contact") Contact
          
        div#social
            
          ul.socialmedia
            
            li: a(href="/")
                  img(alt="LinkedIn", src='../assets/images/linkedin.png')
              
            li: a(href="/")
                  img(alt="GitHub", src='../assets/images/github.png')
                    
            li: a(href="/")
                  img(alt="Dribbble", src='../assets/images/dribbble.png')
                  
        div#header
          img(alt=":o", src='../assets/images/blackcircle.png')
          h1 Front End Web Development and Design
          h2 By Dmitry Issajenko
            
              
  
      div.main
      
        div.header
          h1.contactheader Contact
          
        div#contact
          div.redmsgsection
            h2 Want me to work on your next project/idea?
            div.sendme
              h3 Send me a message...
              img(alt=":o", src='../assets/images/whitetriangle.png')
          
          div.blackformsection
            form.contactform(action='/my-handling-form-page', method='post')
              div.nameandlabel
                label.name(for='name') Name:
                |         
                input(type='text')
                |     
              div.emailandlabel
                label.email(for='mail') E-mail:
                |         
                input(type='email')
                |     
              div.messagetextarea
                label(for='msg') Message:
                |         
                textarea

    footer.footer

      p Copyright &copy; 2014

